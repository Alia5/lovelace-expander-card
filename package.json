{
  "name": "lovelace-expander-card",
  "version": "1.0.0",
  "watch": {
    "buildAndStart": {
      "patterns": [
        "src"
      ],
      "extensions": "svelte"
    }
  },
  "scripts": {
    "build": "VERSION=$(git describe --tags) npm run lint && rollup -c",
    "buildAndStart": "dev=true npm run build && npm start --dev",
    "start": "sirv --port 5000 --host 0.0.0.0 --cors --dev public",
    "validate": "svelte-check",
    "dev": "npm-watch",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@tsconfig/svelte": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.16.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.39.0",
    "npm-watch": "^0.13.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "rollup": "^4.17.2",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-svelte": "^7.2.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "shelljs": "^0.8.5",
    "sirv-cli": "^2.0.2",
    "svelte-check": "^3.7.1",
    "svelte-preprocess": "^5.1.4",
    "tslib": "^2.4.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "svelte-collapse": "^0.1.2",
    "svelte": "^4.2.16"
  },
  "resolutions": {
    "@formatjs/intl-utils": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.2.1.tgz"
  },
  "resolutionsComments": {
    "@formatjs/intl-utils": "Outdated, producing a warning at build, unused by us, brought by custom-card-helpers => skip it"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.9.5"
  }
}
