{
  "name": "lovelace-expander-card",
  "version": "0.0.1",
  "watch": {
    "buildAndStart": {
      "patterns": [
        "src"
      ],
      "extensions": "svelte"
    }
  },
  "scripts": {
    "build": "npm run lint && rollup -c",
    "start": "sirv --port 5000 --host 0.0.0.0 --cors --dev public",
    "validate": "svelte-check",
    "dev": "npm-watch",
    "lint": "eslint ."
  },
  
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@rollup/plugin-json": "^6.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.42.0",
    "npm-watch": "^0.13.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.5",
    "rollup": "^4.18.1",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.2.2",
    "shelljs": "^0.8.5",
    "sirv-cli": "^2.0.2",
    "svelte-check": "^3.8.4",
    "svelte-preprocess": "^5.1.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "svelte-collapse": "^0.1.2",
    "svelte": "^3.54.0"
  },
  "resolutions": {
    "@formatjs/intl-utils": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.2.1.tgz"
  },
  "resolutionsComments": {
    "@formatjs/intl-utils": "Outdated, producing a warning at build, unused by us, brought by custom-card-helpers => skip it"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.18.0"
  }
}
