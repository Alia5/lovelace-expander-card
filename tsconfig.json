{
    "extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"types": ["svelte"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true
	},
    "include": ["src/**/*", "rollup.config.mjs"],
	"exclude": [
		"node_modules",
	  ]
}
